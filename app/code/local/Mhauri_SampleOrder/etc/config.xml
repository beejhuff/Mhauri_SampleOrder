<?xml version="1.0" ?>
<config>
    <modules>
        <Mhauri_SampleOrder>
            <version>1.0.0</version>
        </Mhauri_SampleOrder>
    </modules>
    <frontend>
        <routers>
            <sampleorder>
                <use>standard</use>
                <args>
                    <module>Mhauri_SampleOrder</module>
                    <frontName>sampleorder</frontName>
                </args>
            </sampleorder>
        </routers>
        <layout>
            <updates>
                <sampleorder>
                    <file>sampleorder.xml</file>
                </sampleorder>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <sampleorder>
                <class>Mhauri_SampleOrder_Model</class>
            </sampleorder>
        </models>
        <events>
            <sales_quote_add_item>
                <observers>
                    <sampleorderSetQuoteOptions>
                        <class>sampleorder/observer</class>
                        <method>setQuoteOptions</method>
                    </sampleorderSetQuoteOptions>
                </observers>
            </sales_quote_add_item>
            <sales_convert_quote_item_to_order_item>
                <observers>
                    <sampleorderRewriteCustomOptions>
                        <class>sampleorder/observer</class>
                        <method>rewriteCustomOptions</method>
                    </sampleorderRewriteCustomOptions>
                </observers>
            </sales_convert_quote_item_to_order_item>
        </events>
        <resources>
            <sampleorder_setup>
                <setup>
                    <module>Mhauri_SampleOrder</module>
                    <class>Mhauri_SampleOrder_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </sampleorder_setup>
        </resources>
        <blocks>
            <sampleorder>
                <class>Mhauri_SampleOrder_Block</class>
            </sampleorder>
        </blocks>
        <helpers>
            <sampleorder>
                <class>Mhauri_SampleOrder_Helper</class>
            </sampleorder>
        </helpers>
    </global>
</config>