<config>
    <modules>
        <Mhauri_SampleOrder>
            <version>1.0.0</version>
        </Mhauri_SampleOrder>
    </modules>
    <global>
        <models>
            <sampleorder>
                <class>Mhauri_SampleOrder_Model</class>
            </sampleorder>
        </models>
        <events>

            <sales_quote_add_item>
                <observers>
                    <sampleorderSalesQuoteAddItem>
                        <class>sampleorder/observer</class>
                        <method>salesQuoteAddItem</method>
                    </sampleorderSalesQuoteAddItem>
                </observers>
            </sales_quote_add_item>
            <checkout_cart_update_items_after>
                <observers>
                    <sampleorderApply>
                        <class>sampleorder/observer</class>
                        <method>checkoutCartUpdateItemsAfter</method>
                    </sampleorderApply>
                </observers>
            </checkout_cart_update_items_after>
        </events>
        <resources>
            <sampleorder_setup>
                <setup>
                    <module>Mhauri_SampleOrder</module>
                    <class>Mhauri_SampleOrder_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </sampleorder_setup>
            <sampleorder_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </sampleorder_read>
            <sampleorder_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </sampleorder_write>
        </resources>
        <blocks>
            <sampleorder>
                <class>Mhauri_SampleOrder_Block</class>
            </sampleorder>
        </blocks>
        <helpers>
            <sampleorder>
                <class>Mhauri_SampleOrder_Helper</class>
            </sampleorder>
        </helpers>
    </global>

    <frontend>
        <routers>
            <sampleorder>
                <use>standard</use>
                <args>
                    <module>Mhauri_SampleOrder</module>
                    <frontName>sampleorder</frontName>
                </args>
            </sampleorder>
        </routers>
    </frontend>
</config>